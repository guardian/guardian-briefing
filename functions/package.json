{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "serve": "yarn run build && firebase serve --only functions",
    "shell": "yarn run build && firebase functions:shell",
    "start": "yarn run shell",
    "deploy": "firebase use guardian-briefing-84558 && firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "yarn jest",
    "valid": "yarn run lint && yarn run build && yarn run test",
    "deploy-code": "firebase use code-guardian-briefing && firebase deploy --only functions:guardianBriefing"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/storage": "^2.4.2",
    "@types/node-fetch": "^2.1.6",
    "actions-on-google": "^2.5.0",
    "firebase-admin": "~6.0.0",
    "firebase-functions": "^2.0.3",
    "fs-extra": "^7.0.1",
    "node-fetch": "^2.3.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.5",
    "@types/jest": "^23.3.12",
    "jest": "^23.6.0",
    "prettier": "^1.15.3",
    "ts-jest": "^23.10.5",
    "tslint": "~5.8.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.4"
  },
  "private": true,
  "engines": {
    "node": "8"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
